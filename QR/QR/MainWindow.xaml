<Window x:Class="QR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="20" Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" Click="MenuItem_Click"/>
                <MenuItem Header="Сохранить" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Правка"></MenuItem>
        </Menu>
        <ComboBox Name="QRType" Height="30" VerticalAlignment="Top" Margin="67,64,510.6,0">
            <TextBlock>Текст</TextBlock>
            <TextBlock>URL</TextBlock>
            <TextBlock>Визитная карточка</TextBlock>
            <TextBlock>Картинка</TextBlock>
        </ComboBox>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="31" Margin="67,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Visibility="Hidden"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="249" Margin="422,83,0,0" VerticalAlignment="Top" Width="249"/>
    </Grid>
</Window>
